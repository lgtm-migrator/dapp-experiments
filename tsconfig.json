{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@env/*": [
        "apps/dapp/src/environments/*"
      ],
      "@xmlking/home": [
        "libs/home/src/index.ts"
      ],
      "@xmlking/not-found": [
        "libs/not-found/src/index.ts"
      ],
      "@xmlking/dashboard": [
        "libs/dashboard/src/index.ts"
      ],
      "@xmlking/models": [
        "libs/models/src/index.ts"
      ],
      "@xmlking/clap": [
        "libs/clap/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
